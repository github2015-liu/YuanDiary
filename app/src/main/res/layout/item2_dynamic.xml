<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/rl_dynamic_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_dynamic_person_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_dynamic_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_dynamic_person_head"
            android:text="会飞的猪@"
            android:textColor="@color/tab_unchecked"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_dynamic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dynamic_person"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_dynamic_person_head"
            android:text="链家资深研发工程师"
            android:textColor="@color/tab_unchecked"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_dynamic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dynamic_title"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="话说的满，就容易被打脸，你看现在被别人曝光抄袭了吧。

这位00后ceo现在被曝出涉嫌抄袭GitHub上的开源项目。被抄袭的开源项目原作者跳出来呛声00后CEO，素材图都不会换，连抄袭都不够格，简直是“赤裸裸的复制”。

原作者的项目介绍中，Mr.Cat"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_dynamic_allContent"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_dynamic_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="全文"
            android:textColor="@color/welcome_regist_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dynamic_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <!--动态展示九张图片-->
        <com.home.we.yuandiary.common.util.NineGridTestLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:sapcing="4dp" />

        <TextView
            android:id="@+id/tv_dynamic_pulish_time"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/layout_nine_grid"
            android:layout_alignParentLeft="true"

            />





    </RelativeLayout>





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/home_konw_more"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="1"

            >




            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/iv_zan_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_zan"
                android:text="9862"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />






        </RelativeLayout>




        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="1"

            >


            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                />


            <TextView
                android:id="@+id/iv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_comment"
                android:text="51"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />



        </RelativeLayout>



        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="1"

            >


            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_share"
                android:text="分享"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                />



        </RelativeLayout>



    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/home_konw_more"/>


</LinearLayout>