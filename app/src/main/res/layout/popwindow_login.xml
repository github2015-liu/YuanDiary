<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/welcome_regist_bg"
    >


    <TextView
        android:id="@+id/tv_welcome_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_welcome_login_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_welcome_login"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:text="手机号"
        android:textColor="@color/welcome_regist_color"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/et_login_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome_login_phoneNum"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:phoneNumber="true"
        android:textCursorDrawable="@color/welcome_regist_color"
        android:textColor="@color/welcome_regist_text_color"
        />


    <TextView
        android:id="@+id/tv_login_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_phoneNum"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"

        android:text="密码"
        android:textColor="@color/welcome_regist_color"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:password="true"
        android:textCursorDrawable="@color/welcome_regist_color"
        android:textColor="@color/welcome_regist_text_color"
        />



    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginRight="5dp"
        android:text="登录"
        android:layout_alignParentRight="true"
        android:textColor="@color/welcome_regist_finish_color"
        android:layout_below="@+id/et_login_pwd" />


    <Button
        android:id="@+id/btn_thrid_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="第三方登录"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/welcome_regist_finish_color"
        android:layout_below="@+id/et_login_pwd" />





</RelativeLayout>