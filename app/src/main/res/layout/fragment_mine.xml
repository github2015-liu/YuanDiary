<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">






    //个人资料布局

    <LinearLayout
        android:id="@+id/ll_person_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/mine_bg2"
        android:orientation="horizontal">




        <ImageView
            android:id="@+id/iv_mine_user_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignLeft="@id/iv_mine_user_pic"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"

            >

            <TextView
                android:id="@+id/tv_mine_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="唐钰小宝"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/colorYellow"
                />



            <RelativeLayout

                android:id="@+id/rl_mine_companyinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tv_mine_user_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">




                <TextView
                    android:id="@+id/tv_mine_user_work_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="北京六间房科技有限公司"
                    android:textSize="15dp"
                    android:textColor="#ffffff"

                    />


                <TextView

                    android:id="@+id/tv_mine_user_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="php"
                    android:textSize="15dp"
                    android:layout_below="@id/tv_mine_user_work_loc"
                    android:textColor="#ffffff"


                    />

                <TextView
                    android:id="@+id/tv_mine_user_work_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_mine_user_work"
                    android:layout_below="@id/tv_mine_user_work_loc"
                    android:text="6年"
                    android:textSize="15dp"
                    android:textColor="#ffffff"


                    />


                <TextView
                    android:id="@+id/tv_mine_user_work_loc_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mine_user_work_loc"
                    android:layout_toRightOf="@id/tv_mine_user_work_age"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="北京"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    />



            </RelativeLayout>













        </RelativeLayout>



        <!--知名度-->
        <RelativeLayout
            android:id="@+id/rl_gz"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/roundbg"
            >

            <ImageView
                android:id="@+id/iv_famous"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/famous"
                >
            </ImageView>

            <TextView
                android:id="@+id/tv_famous_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_famous"
                android:layout_marginTop="5dp"
                android:text="知名度"
                android:textColor="#ffffff"
                />


            <TextView
                android:id="@+id/iv_famous_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_famous"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:text="1024"
                android:textColor="#ffffff"

                />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="1"

             >


            <TextView
                android:id="@+id/tv_gz_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="347\n关注"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                 />






        </RelativeLayout>


        <ImageView
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/home_konw_more"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="1"

            >


            <TextView
                android:id="@+id/tv_fans_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9799\n粉丝"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/home_konw_more"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="1"

            >


            <TextView
                android:id="@+id/tv_friend_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="499\n朋友"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_line_color"/>


    //我的动态和八卦

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_trend"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/mine_dynamic" />
        
        <TextView
            android:id="@+id/tv_mine_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_mine_trend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="我的动态、匿名"
            android:textStyle="bold"

            >

        </TextView>

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_line_color"/>


    //附近的人

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_near_people"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/qa" />

        <TextView
            android:id="@+id/tv_mine_near_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_mine_near_people"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="我的问答"
            android:textStyle="bold"
            >

        </TextView>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_line_color"/>


    //成为认证用户

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_authenticate_user"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/vistor" />

        <TextView
            android:id="@+id/tv_mine_authenticate_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_mine_authenticate_user"
            android:text="访客"
            android:textStyle="bold"
            />





    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_line_color"/>



    //收藏

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_collect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/certification" />

        <TextView
            android:id="@+id/tv_mine_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_mine_collect"
            android:text="实名认证"
            android:textStyle="bold"
            >

        </TextView>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_line_color"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_job"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/job" />

        <TextView
            android:id="@+id/tv_mine_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_mine_job"
            android:text="职位认证"
            android:textStyle="bold"
            >

        </TextView>

    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mine_line_color"/>


    //设置

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/setting" />

        <TextView
            android:id="@+id/tv_mine_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_mine_setting"
            android:text="设置"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_line_color"/>





</LinearLayout>